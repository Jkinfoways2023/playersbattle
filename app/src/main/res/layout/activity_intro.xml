<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tournaments.grindbattles.activity.IntroActivity">

    <RelativeLayout
        android:id="@+id/lyt_pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lyt_slider">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pager"
            android:layout_marginBottom="85.0dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle"
            android:visibility="gone"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_slider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/lyt_indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="10.0dip">

            <LinearLayout
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="10.0dip"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/txt_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10.0dip"
                android:fontFamily="@font/poppins"
                android:text="@string/skip"
                android:textColor="@android:color/black"
                android:textSize="16.0sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginEnd="10.0dip">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.0dip"
                android:layout_marginTop="15.0dip"
                android:fontFamily="@font/poppins"
                android:text="@string/don_t_have_an_account"
                android:textColor="@android:color/black"
                android:textSize="12.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15.0dip"
                android:layout_marginEnd="10.0dip"
                android:fontFamily="@font/poppins"
                android:text="@string/already_a_user"
                android:textColor="@android:color/black"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_1"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="10.0dip"
            android:layout_marginBottom="10.0dip">

            <TextView
                android:id="@+id/txt_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.0dip"
                android:fontFamily="@font/poppins_semibold"
                android:text="REGISTER"
                android:textColor="@color/orange_color"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10.0dip"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/login"
                android:textColor="@color/orange_color"
                android:textSize="16.0sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>