<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="14dp"
        android:background="@drawable/grad1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gameType"
            android:textSize="15.0dip"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:text="1 V 1 Battle"/>

        <TextView
            android:id="@+id/title"
            android:textSize="23.0dip"
            android:textStyle="bold"
            android:textColor="@color/orange_A100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="Champions Battle"/>

        <TextView
            android:id="@+id/entryFee"
            android:textSize="14.0dip"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center"
            android:text="Entry Fee:$15"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coin_bg"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/winningAmount"
                android:textSize="14.0dip"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:layout_gravity="center"
                android:text="Win"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingVertical="6dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:textSize="11.0dip"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Time:02/03/2021 at 12:00 PM"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>