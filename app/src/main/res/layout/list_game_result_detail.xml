<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.0dip"
    android:layout_marginTop="8.0dip"
    android:layout_marginRight="10.0dip"
    android:foreground="?android:selectableItemBackground"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainTopBanner"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:background="@drawable/pubg_banner"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15.0dip"
            android:paddingTop="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingBottom="15.0dip">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/darkBlue"
                android:layout_marginTop="10dp"
                android:textSize="17.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/prizePoolLL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Entry Fee"
                        android:textColor="#ff7c7c7c"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/entryFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:drawableLeft="@drawable/coin_icon_16x16"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/lato_black"
                        android:text="00"
                        android:textColor="@color/darkBlue"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Winning Amt"
                        android:textColor="#ff7c7c7c"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/winningAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:drawableLeft="@drawable/coin_icon_16x16"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/lato_black"
                        android:text="00"
                        android:textColor="@color/darkBlue"
                        android:textSize="13.0sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Game Result"
                        android:textColor="#ff7c7c7c"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/gameResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/lato_black"
                        android:text="00"
                        android:textColor="@color/darkBlue"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Score"
                        android:textColor="#ff7c7c7c"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:fontFamily="@font/lato_black"
                        android:text="00"
                        android:textColor="@color/darkBlue"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="TYPE"
                        android:textColor="#ff7c7c7c"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:fontFamily="@font/lato_black"
                        android:text="Solo"
                        android:textColor="@color/darkBlue"
                        android:textSize="13.0sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:fontFamily="@font/lato"
                android:layout_gravity="center"
                android:textSize="10.0sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>