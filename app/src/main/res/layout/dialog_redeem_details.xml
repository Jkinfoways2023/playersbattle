<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@id/mainRL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomIDPassRL"
            android:layout_margin="15.0dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="10.0dip">

                <Button
                    android:id="@id/cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background1"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/lato"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="#ffffffff"
                    android:textSize="15.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="10.0dip">

                <Button
                    android:id="@+id/okay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background1"
                    android:backgroundTint="@color/green_A700"
                    android:fontFamily="@font/lato"
                    android:text="@string/okay"
                    android:textAllCaps="true"
                    android:textColor="#ffffffff"
                    android:textSize="15.0sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@id/roomIDPassRL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topHeader"
            android:layout_marginStart="24.0dip"
            android:layout_marginTop="25.0dip"
            android:layout_marginEnd="24.0dip"
            android:gravity="start">

            <TextView
                android:id="@+id/holderNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Account Name:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/holderNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/holderNameText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="Sky Coder"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/holderIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holderNameText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Account Id:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/holderIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holderNameText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/holderIdText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="skyforcoding"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/walletNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holderIdText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Wallet Type:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/walletNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holderIdText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/walletNameText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="PayTm"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/walletNameText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Requested On:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/dateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/walletNameText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/dateText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="11-11-2019"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/orderIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Order Id:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/orderIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/orderIdText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="1575866973662"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/coinsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderIdText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Play Coins:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/coinsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderIdText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/coinsText"
                android:drawableRight="@drawable/coin_icon_16x16"
                android:drawablePadding="2dp"
                android:fontFamily="@font/lato_black"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="10"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/amountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coinsText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Amount:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/amountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coinsText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/amountText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="10"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/modeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amountText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Payment Type:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/modeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amountText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/modeText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="Debit"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/modeText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Payment Status:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/statusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/modeText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/statusText"
                android:fontFamily="@font/lato_black"
                android:singleLine="true"
                android:text="Processing"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/remarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusText"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:fontFamily="@font/lato"
                android:text="Remark:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/remarkValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusText"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_toRightOf="@id/remarkText"
                android:fontFamily="@font/lato_black"
                android:singleLine="false"
                android:text="refund match fee due to cancel match"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@id/topHeader"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_black"
                android:text="Transaction Details"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>